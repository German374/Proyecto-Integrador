<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="454.0" prefWidth="324.0" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.rutaspendie_max_min.controller.PrimaryController">

    <children>

        <ComboBox fx:id="cmbTipoFuncion" onAction="#actualizarCampos" />

        <TextField fx:id="txtA" promptText="Valor de a" />
        <TextField fx:id="txtB" promptText="Valor de b" />
        <TextField fx:id="txtC" promptText="Valor de c" />

        <Button onAction="#calcular" text="Calcular" />
        <Button onAction="#limpiar" text="Limpiar" />

        <Label fx:id="lblResultado" />
        <Label fx:id="lblMaxima" />
        <Label fx:id="lblMinima" />
        <Label fx:id="lblMensaje" />

    </children>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

</VBox>
